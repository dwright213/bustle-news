<div class="col-md-12">
  <p><h3>News you can use!</h3></p>
  <div class="row col-md-10">
    <button class="btn btn-primary" {{action 'dieEmberDie'}}>Change Image</button>

      <figure>
        <img {{bind-attr src=currentPost.image}}>
        <figcaption>{{currentPost.title}}</figcaption>
      </figure>

  </div>

  <div class="row col-md-12">

    {{#each post in model}}
      <div class="col-md-3 post-headlines" style="background: url('../img/{{unbound post.image}}'); background-size: 100% 100%;">
        <div class="headline-title col-md-12"><h4>{{post.title}}</h4></div>
      </div>
    {{/each}}
  </div>
</div>
